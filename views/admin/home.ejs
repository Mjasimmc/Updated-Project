    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <section class="mt-5">
        
        <div>
            <h3>Weekly Revenue Chart     </h3>
            <canvas id="myChart"></canvas>
        </div>
        <script src="script.js"></script>
    </section>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
var chart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: ['<%= todaySales.one %>',
        '<%=  todaySales.two %>',
        '<%=  todaySales.three %>',
        '<%=  todaySales.four %>',
        '<%=  todaySales.five %>',
        '<%=  todaySales.six %>',
        '<%=  todaySales.seven %>',],
        datasets: [{
            label: 'Amount',
            data: [
            '<%= todaySales.oneSum %>',
             '<%= todaySales.twoSum %>',
             '<%= todaySales.threeSum %>',
             '<%= todaySales.fourSum %>',
             '<%= todaySales.fiveSum %>',
             '<%= todaySales.sixSum %>',
             '<%= todaySales.sevenSum %>',],
            fill: true,
            borderColor: 'rgb(75, 192, 192)',
            tension: 0.1
        }]
    },
    options: {
        plugins: {
            title: {
                display: true,
                text: 'Line Chart Example'
            },
            legend: {
                display: true,
                position: 'bottom'
            }
        },
        scales: {
            y: {
                title: {
                    display: true,
                    text: 'Value'
                }
            }
        }
    }
});
    </script>


 

    <!-- Recent Sales Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h6 class="mb-0">Recent Sales</h6>
                <a href="/admin/orderlist/1">Show All</a>
            </div>
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-dark">
                            <th scope="col"></th>
                            <th scope="col">Date</th>
                            <th scope="col">Customer</th>
                            <th scope="col">Amount</th>
                            <th scope="col">payement</th>
                            <th scope="col">Status</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach((element,index) => { %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td><%= element.orderdate %></td>
                                <td><%= element.orderaddress.name %></td>
                                <td>$<%= element.totalprice %></td>
                                <td><%= element.payement %></td>
                                <td><%= element.orderstatus[element.orderstatus.length-1] %></td>
                                <td><a class="btn btn-sm btn-primary" href="/admin/order/<%= element._id %>">Detail</a></td>
                            </tr>
                        <% }) %>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Recent Sales End -->



